@model Whoops.ViewModels.User.UserInfoViewModel

@{
    ViewBag.Title = "User Info";
}

@section scripts
    {
    <script src="~/lib/angular/angular.min.js"></script>
    <script src="~/js/simpleControls.js"></script>
    <script src="~/js/app-user.js"></script>
    <script src="~/js/userController.js"></script>
}


<div class="col-md-3">
    <h1>Your Profile</h1>
</div>
<div class="row" ng-app="app-user">
    <div ng-controller="userController as vm" class="col-md-6 offset-3" ng-init="vm.getUserInfo()">
        <wait-cursor display-When="vm.isBusy"> </wait-cursor>
            <div class="form-group">
                <label>FirstName</label>
                <label class="form-control">{{vm.user.firstName}}</label>
              
            </div>
            <div class="form-group">
                <label>LastName</label>
                <label class="form-control" >{{vm.user.lastName}}</label>
            </div>
            <div class="form-group">
                <label>Date Of Birth</label>
                <label class="form-control">{{vm.user.dob}}</label>
            </div>
            <div class="form-group">
                <label>Email</label>
                <label class="form-control">{{vm.user.email}}</label>

            </div>
            <div class="form-group">
                <label>Phone</label>
                <label class="form-control">{{vm.user.phone}}</label>
            </div>

            <div class="form-group">
                <label class="checkbox-inline">
                <input type="checkbox" checked={{vm.user.allowNotifications}} disabled/>
                    I want receive notifications
                </label>
            </div>
            <div class="form-group">
                <div class="text-danger" ng-show="vm.errorMessage" ng-cloak>{{vm.errorMessage}}</div>
                <a href="#" class="btn btn-sm btn-success">Edit</a>
                <a asp-controller="App" asp-action="Index" class="btn btn-secondary">Cancel</a>
            </div>
    </div>
</div>



@model Whoops.ViewModels.CreateUserViewModel

@{
    ViewBag.Title = "Create User";
}

@section scripts
    {
    <script src="~/lib/angular/angular.min.js"></script>
    <script src="~/js/simpleControls.js"></script>
    <script src="~/js/app-user.js"></script>
    <script src="~/js/userController.js"></script>
}


<div class="col-md-3">
    <h1>Create User</h1>
</div>
<div class="row" ng-app="app-user">
    <div ng-controller="userController as vm" class="col-md-6 offset-3">
        <div class="text-danger" ng-show="vm.errorMessage" ng-cloak>{{vm.errorMessage}}</div>
        <wait-cursor display-When="vm.isBusy"> </wait-cursor>

        <form novalidate name="newUserForm" ng-submit="vm.createUser()">
            <div class="form-group">
                <label>FirstName</label>
                <input class="form-control" type="text" id="firstname" name="firstname" ng-model="vm.newUser.firstName" required ng-minlength="2" ng-maxlength="30" />
                <span ng-show="newUserForm.firstname.$error.required" class="text-warning">Name is required</span>
                <span ng-show="newUserForm.firstname.$error.minlength" class="text-warning">name must be at least 2 characters</span>
            </div>
            <div class="form-group">
                <label>LastName</label>
                <input class="form-control" type="text" id="lastname" name="lastname" ng-model="vm.newUser.lastName" ng-maxlength="30" />
            </div>
            <div class="form-group">
                <label>Date Of Birth</label>
                <input class="form-control" type="date" id="dob" name="dob" ng-model="vm.newUser.dob" />
            </div>
            <div class="form-group">
                <label>Email</label>
                <input class="form-control" type="email" id="email" name="email" ng-model="vm.newUser.email" required ng-maxlength="30" />
                <span ng-show="newUserForm.email.$error.required" class="text-warning">Email is required</span>
            </div>
            <div class="form-group">
                <label>Password</label>
                <input class="form-control" type="password" id="password" name="password" ng-model="vm.newUser.password" required ng-maxlength="30" />
                <span ng-show="newUserForm.password.$error.required" class="text-warning">Password is required</span>
            </div>
            <div class="form-group">
                <label>ConfirmPassword</label>
                <input class="form-control" type="password" id="confirmpassword" name="confirmpassword" ng-model="vm.newUser.confirmPassword" required ng-maxlength="30" />
                <span ng-show="newUserForm.confirmPassword.$error.required" class="text-warning">ConfirmPassword is required</span>
            </div>
            <div class="form-group">
                <input type="submit" value="Register" class="btn btn-sm btn-success" ng-disabled="newUserForm.$invalid" />
                <a asp-controller="App" asp-action="Index" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>
</div>
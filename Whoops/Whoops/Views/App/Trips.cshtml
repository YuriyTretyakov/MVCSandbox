@model IEnumerable<Whoops.DataLayer.Trip>


@{
    ViewBag.Title = "Home Page";

}
@section scripts
    {
    <script src="~/lib/angular/angular.min.js"></script>
    <script src="~/js/simpleControls.js"></script>

    <script src="~/js/app-trips.js"></script>
    <script src="~/js/tripsController.js"></script>
}

<div class="row" ng-app="app-trips">

    <div ng-controller="tripsController as vm" class="col-md-6 offset-3">
        <div class="text-danger" ng-show="vm.errorMessage" ng-cloak>{{vm.errorMessage}}</div>
        <wait-cursor display-When="vm.isBusy"> </wait-cursor>
        <table class="table table-responsive table-responsive">
            <tr ng-repeat="trip in vm.trips">
                <td>{{trip.name  }}</td>
                <td>{{trip.created |date}}</td>
                <td><a href="#" class="btn btn-primary btn-sm">Manage</a></td>
            </tr>
        </table>

        <form novalidate name="newTripForm" ng-submit="vm.addTrip()">
            <div class="form-group">
                <label>TripName</label>
                <input class="form-control" type="text" id="name" name="name" ng-model="vm.newTrip.name" required ng-minlength="5" />
                <span ng-show="newTripForm.name.$error.required" class="text-warning">Name is required</span>
                <span ng-show="newTripForm.name.$error.minlength" class="text-warning">name must be at least 5 characters</span>
            </div>
            <div class="form-group">
                <input type="submit" value="Add" class="btn btn-sm btn-success" ng-disabled="newTripForm.$invalid" />
            </div>

        </form>
    </div>

    <div class="col-md-6">
        <h1>Super content</h1>
        <div>
            <form method="post">
                <div class="form-group">
                    <label>Name</label>
                    <input class="form-control" />
                    <span style="color:red" class="text-muted"></span>
                </div>
                <div class="form-group">
                    <label>Location</label>
                    <input class="form-control" />
                    <span style="color:red" class="text-muted"></span>
                </div>
                <div class="form-group">
                    <label>Date</label>
                    <input class="form-control" />
                    <span style="color:red" class="text-muted"></span>
                </div>
                <div class="form-group">
                    <a asp-controller="App" asp-action="Index" class="btn btn-primary">Cancel</a>
                    <input type="submit" value="Send" class="btn btn-success" />
                </div>
            </form>
        </div>
    </div>
    <div class="col-md-6">
        <h1>The map</h1>
        <ul>
            @foreach (var item in Model)
            {
                <li>@item.Name @item.DateCreated</li>
            }
        </ul>
    </div>
</div>
